<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">


<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">ciapolot5</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/cinema_db</property>
        <property name="show_sql">true</property>
        <property name="format_sql">false</property>
       <!-- <property name="hibernate.hbm2ddl.auto">create</property>-->
        <mapping class="com.mojafirma.cinema.model.Movie"/>
        <mapping class="com.mojafirma.cinema.model.CinemaHall"/>
        <mapping class="com.mojafirma.cinema.model.Reservation"/>
        <mapping class="com.mojafirma.cinema.model.Seance"/>


    </session-factory>
</hibernate-configuration>